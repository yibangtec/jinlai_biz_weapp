/* pages/promotion_biz/delete.wxss */
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  height: 100%;
  background-color: #f6f6f6;  
  position: relative;
} 
.errorTips{
  margin: 20rpx;
  font-size: 24rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #3e3a39;
  background-color: #FBF7CC;
  padding: 0 20rpx;
}
.temp-box{
  margin: 20rpx 20rpx;
  background-color: #fff; 
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.label-text{
  text-align: left;
  font-size: 26rpx;
  line-height: 66rpx;
  color:  #3e3e39;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.delete-text{
  text-align: center;
  font-size: 26rpx;
  line-height: 66rpx;
  color:  #3e3e39;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.specifications{
  float: left;
  text-align: left;
  font-size: 26rpx;
  margin: 20rpx;
  color:  #3e3e39;
}
.temp-input{
  height: 70rpx;
  padding-left: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #c9caca;
  font-size: 26rpx;
  color: #9fa0a0;
  margin: 0 20rpx 20rpx 20rpx;
}
.content{
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #3e3a39;

}
.con-tab{
  color: #9fa0a0;
  float: left;
  width: 50%;
  text-align: center;
  line-height: 65rpx;
}
.recovery-list{
  padding: 20rpx 0;
  border-top: 1rpx solid #c9caca; 
}
.recovery-list .image{
  width:50%;
  float: left;
  text-align: center 
}
.recovery-list .image image{
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  border-radius: 12rpx;
}