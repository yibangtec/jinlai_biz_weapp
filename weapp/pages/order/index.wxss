/* pages/order/index.wxss */
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  background-color: #f6f6f6;  
  position: relative;
}  
.temp-box{
  margin: 20rpx 20rpx;
  background-color: #fff; 
  border-radius: 12rpx;
}
.tab{
  width: 33.33333333%;
  float: left;
  font-size: 26rpx;
  font-weight: 700;
  text-align: center;
  color: #3E3A39;
}
.tab-text{
  margin: 0 58rpx;
  padding: 26rpx 0;
}
.tab-current{
  color: #FF3649;
  border-bottom: 4rpx solid #FF3649;
}
.tab-img{
  width: 18rpx;
  height: 12rpx;
  transform: translateX(180);
}
.tab-list{
  position: absolute;
  top: 100rpx;
  width: 236rpx;
  border-radius: 12rpx;
  background-color: #fff;
  border: 1rpx solid #c9caca;
  border-bottom: none;
  overflow: hidden;
}
.tab-list-text{
  font-size: 26rpx;
  color: #3E3A39;
  padding: 29rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #c9caca;
}
.current-list{
  background-color: #FF3649;
  color: #fff;
}
.order-title{
  display: flex;
  margin: 0 20rpx;
}
.order-id{
  flex: 1;
}
.order-text{
  font-size: 26rpx;
  color: #3E3A39;
  margin: 20rpx 0;
}
.float-left{
  float: left;
}
.float-right{
  float: left;
}
.order-money{
  padding: 30rpx 0;
}
.order-money-li{
  box-sizing: border-box;
  width: 33.33333%;
  float: left;
  border-right: 1rpx solid #c9caca;
}
.shallow{
  font-size: 22rpx;
  color: #c9caca;
  padding-left: 42rpx;

}
.account{
  font-size: 30rpx;
  color: #3E3A39;
  padding-left: 42rpx;
}
.select{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0 20rpx 20rpx;
  float: left
}
.select-list{
  float: left;
  width: 130rpx;
  height: 50rpx;
  font-size: 24rpx;
  border-radius: 25rpx;
  text-align: center;
  line-height: 45rpx;
  margin: 20rpx 0 10rpx 0;
}
.select-left{
  color:#FF5065;
  border: 1rpx solid #FF5065;
  margin-right: 10rpx;
}
.select-right{
  color: #9FA0A0;
  margin-right: 10rpx;
  border: 1rpx solid #9FA0A0;
}

.my-check{
  margin: 25rpx 25rpx 25rpx 0;
  float: left
}
.item-btn{
  border-top: 1rpx solid #c9caca;
  margin: 0 20rpx;
}
.border-img{
  display: block;
  width: 100%;
  height: 14rpx;
}
.bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
}
.bottom-box{
  width: 100%;
  display: flex;
}
.bottomSelect{
  flex: 1;
  background-color:#fff;
  height: 85rpx;
}
.total{
  display: block;
  float: left;
  font-size: 26rpx;
  color: #3E3A39;
  padding: 10rpx;
  margin-top: 20rpx;
}
.bot-right{
  width: 480rpx;
}
.bottom-list{
  float: left;
  width: 160rpx;
  height: 85rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
}
.bot-check{
  margin: 25rpx;
  float: left
}