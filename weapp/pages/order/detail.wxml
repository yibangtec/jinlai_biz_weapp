<view class='temp-box'>
  <view class='order-list list-text'>
    <view class='list-left'>订单ID</view>
    <view class='list-right'>待付款</view>
  </view>
  <view class='order-list list-text'>
    <view class='list-left'>用户ID</view>
    <view class='list-right'>未申请</view>
  </view>
  <view class='order-list list-text'>
    <view class='list-left'>小计</view>
