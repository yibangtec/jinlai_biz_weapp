<!--createItem.wxml-->
<view class="section">
  <view class="section__title">所属系统分类*</view>
  <picker bindchange="bindPickerChange" value="{{index.name}}" range="{{objectArray}}" range-key="name">
    <view class="picker">
    <input value="{{objectArray[index].name}}" placeholder="请选择所属系统分类" />
    </view>
  </picker>
</view>
<view class="section">
  <view class="section__title">所属品牌*</view>
  <picker bindchange="bindPickerArray" value="{{sum}}" range="{{array}}">
    <view class="picker">
    <input value="{{array[sum]}}" placeholder="请选择所属品牌" />
    </view>
  </picker>
</view>
<view class="section">
  <view class="section__title">所属商家分类*</view>
  <picker bindchange="bindPickerBiz" value="{{num.name}}" range="{{objectBizArray}}" range-key="name">
    <view class="picker">
    <input value="{{objectBizArray[num].name}}" placeholder="请选择所属商家分类" />
    </view>
  </picker>
</view>
<view class="section">
    <view class="section__title">商家自定义商品编码*</view>
    <input type="text" maxlength="20" bindblur="getCode_biz" placeholder="最多20个字符" />
</view>
<view class="section">
    <view class="section__title">主图</view>
    <view class="page-body-info">
        <block wx:for="{{mainImageSrc}}" wx:key="{{index}}">
          <image bindtap="preview" src="{{item}}" class="image" mode="aspectFill"><image index="{{index}}" bindtap="closeImgMain" class="close" src="../../image/close.png"></image></image>
        </block>
        <view style="{{dis}}">
          <view class="image-plus image-plus-nb" bindtap="chooseImageMain">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text">选择图片</view>
        </view>
    </view>
  <button name="" type="primary" size="mini" bindtap="upImgMain">开始上传图片</button>
</view>
<view class="section">
    <view class="section__title">形象图</view>
    <view class="page-body-info">
        <block wx:for="{{figureImageSrc}}" wx:key="{{index}}">
          <image src="{{item}}" class="image" mode="aspectFill">
            <image data-index="{{index}}" bindtap="closeImgFigure" class="close" src="../../image/close.png"></image>
            <image data-index="{{index}}" bindtap="moveLeft" class="left" src="../../image/left.png"></image>
            <image data-index="{{index}}" bindtap="moveRight" class="right" src="../../image/right.png"></image>
          </image>   
        </block>
        <view style="{{disfig}}">
          <view class="image-plus image-plus-nb" bindtap="chooseImageFigure">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text">选择图片</view>
        </view>
    </view>
  <button name="" type="primary" size="mini" bindtap="upImgFigure">开始上传图片</button>
</view>
<view class="section tc">
  <video src="{{src}}"  controls ></video>
  <view class="btn-area">
    <button bindtap="bindButtonTap">获取视频</button>
  </view>
</view>
<view class="section">
    <view class="section__title">形象视频</view>
    <view class="page-body-info">
        <block>
          <video src="{{src}}"></video>
        </block>
        <view style="{{disSrc}}">
          <view class="image-plus image-plus-nb" bindtap="chooseVideo">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text">选择视频</view>
        </view>
    </view>
  <button name="" type="primary" size="mini" bindtap="upVideo">开始上传视频</button>
</view>
<view class="section">
    <view class="section__title">商品名称*</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最多30个字符" />
</view>
<view class="section">
    <view class="section__title">商品宣传语/卖点</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最多30个字符" />
</view>
<button name="" type="primary" size="mini" bindtap="upImgLicense">商品描述</button>

<view class="section">
    <view class="section__title">标签价/原价（元）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="0.00为不显示，最高99999.99"/>
</view>
<view class="section">
    <view class="section__title">商城价/现价（元）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最高99999.99" />
</view>
<view class="section">
    <view class="section__title">销售单位</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最多10个字符，例如斤、双、头、件等，默认份" />
</view>
<view class="section">
    <view class="section__title">净重（KG）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最高999.99" />
</view>
<view class="section">
    <view class="section__title">毛重（KG）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最高999.99" />
</view>
<view class="section">
    <view class="section__title">体积重（KG）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最高999.99" />
</view>
<view class="section">
    <view class="section__title">库存量（份）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="最多65535" />
</view>
<view class="section">
    <view class="section__title">每单最高限量（份）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="0为不限，最高99" />
</view>
<view class="section">
    <view class="section__title">每单最低限量（份）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="0为不限，最高99" />
</view>
<view class="section">
  <view class="section__title">是否可用优惠券</view>
  <radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for="{{items}}">
      <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
    </label>
  </radio-group>
</view>
<view class="section">
    <view class="section__title">积分抵扣率</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="例如允许5%的金额使用积分抵扣则为0.05，10%为0.1，最高0.5" />
</view>
<view class="section">
    <view class="section__title">佣金比例/提成率</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="例如提成成交价5%的金额则为0.05，10%为0.1，最高0.5" />
</view>
<view class="section">
    <view class="section__title">预定上架时间</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="Unix时间戳，不可小于当前时间" />
</view>
<view class="section">
    <view class="section__title">预定下架时间</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="Unix时间戳，不可小于当前时间" />
</view>
<view class="section">
    <view class="section__title">参与的营销活动ID）</view>
    <input type="text" maxlength="30" bindfocus="verName" bindblur="getBrief_name" name="brief_name" placeholder="0为不限，最高99" />
</view>

<button type="primary" disabled="{{disable}}" bindtap="submit">确定</button>