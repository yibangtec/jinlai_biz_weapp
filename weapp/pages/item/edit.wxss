.image {
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin:0 0 20rpx 20rpx;
  border-radius: 15rpx;
  position: relative;
}
.close{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
}
.icon-box{
  position: absolute;
  width: 150rpx;
  height: 20rpx;
  padding: 10rpx 0;
  background-color: rgba(0, 0, 0, 0.3);
  bottom: 0;
  border-radius: 0 0 15rpx 15rpx;
}
.icon-box .icon-left{
  float: left;
  width: 50%;
  box-sizing: border-box;
  border-right: 1rpx solid #fff;
}
.icon-box .icon-right{
  float: left;
  width: 50%;
}
.left-img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  margin-left: 25rpx; 
}
.right-img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  margin-left:30rpx; 
  
}
.left{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
}
.right{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
}
.pick_datetime {
    position: fixed;
    left: 0;
    bottom: 0;
    width:100%;
    overflow:hidden;
    background-color: #ccc; 
    z-index: 10 !important;
}
.pick_datetime_tool {
    display:flex;
    justify-content:space-between;
    height:92rpx;
    line-height:92rpx;
    border-top:4rpx solid #eee;
    border-bottom:4rpx solid #eee;
    padding:0 20rpx;
}
.pick_datetime_ok {font-weight:bold;}
.pick_datetime_clear {color:#666;}
.pick_datetime picker-view {
    font-size:34rpx;
}
.pick_datetime_column {
    height:40px;
    line-height:40px;
    text-align:center;
}


.page-body-info {
  display: flex;
  flex-direction: flow;
  align-items: center;
  background-color: #fff;
  width: 100%;
}
.page-section{
  width: 100%;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  border-radius: 15rpx;
  position: relative;
  margin:0 0 20rpx 20rpx;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}