/* createItem.wxss */
input{
  border: 1rpx solid #ccc;
}
.aspectFill {
  display: block;
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.cancel{
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  color: red;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
}
.page-body-info {
  display: flex;
  flex-direction: flow;
  align-items: center;
  background-color: #fff;
  width: 100%;
}
.page-section{
  width: 100%;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.image {
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin-right: 20rpx;
  position: relative;
}
.close{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  top: 0;
  right: 0;
}
.left{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
}
.right{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
}
.page-body-info {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}
video{
  width: 700rpx;
  height: auto;
}