/**index.wxss**/
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  min-height: 100%;  
  background-color: #F6F6F6;  
}  
.header{
  margin: 20rpx 30rpx;
  background-color: #fff; 
  border-radius: 20rpx;
}
.header-status{
  float: right;
  height: 30rpx;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #9fa0a0;
  padding-right: 30rpx;
}
.header-status image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.header-logo{
  height: 150rpx;
  text-align: center;
  padding-top: 60rpx;
}
.header-logo image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  border: 2rpx solid #efefef;
}
.header-name{
  text-align: center;
  font-size: 30rpx;
  color: #3e3a39;
  padding: 30rpx 0;
}
.header-tel{
  text-align: center;
  font-size: 26rpx;
  color: #3e3a39;
  padding: 0 0 70rpx 0;
}
.order{
  margin: 20rpx 30rpx;
  padding: 45rpx 0;
  background-color: #fff; 
  border-radius: 20rpx;
}
.order-list{
  box-sizing: border-box;
  float: left;
  width: 25%;
  text-align: center;
  font-size: 26rpx;
  color: #666464;
  border-right: 2rpx solid #efefef;
}
.order-list image{
  height: 60rpx;
  width: 60rpx;
}
.item{
  margin: 20rpx 30rpx;
  background-color: #fff; 
  border-radius: 20rpx;
}
.item-list{
  box-sizing: border-box;
  float: left;
  width: 33.33333333%;
  text-align: center;
  font-size: 26rpx;
  color: #666464;
  padding: 45rpx 0;
  border-right: 2rpx solid #efefef;
  border-bottom: 2rpx solid #efefef;
}
.item-list image{
  height: 60rpx;
  width: 60rpx;
}
.border-none{
  border-right: none;
}
.border-bot{
  border-bottom: none;
}




.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}