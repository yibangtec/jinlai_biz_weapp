/* pages/category_biz/index.wxss */
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  height: 100%;
  background-color: #f6f6f6;  
  position: relative;
}  
.header{
  margin:20rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #3e3a39;
  border-radius: 20rpx;
}
.header .tab{
   width: 33.33333333%;
  float: left;
  font-size: 26rpx;
  font-weight: 700;
  text-align: center;
}
.tab-text{
  margin: 0 58rpx;
  padding: 26rpx 0;
}
.tab-current{
  color: #FF3649;
  border-bottom: 4rpx solid #FF3649;
}
.footed{
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  font-size: 25rpx;
  color: #666464;
}
.footed-tab{
  width: 25%;
  float: left;
  text-align: center;
}
.footed-image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}


.category-none{
  text-align: center;
  font-size: 30rpx;
  color: #A3A3A3;
}
.kong-img{
  width: 250rpx;
  height: 200rpx;
  margin: 230rpx 0 80rpx 0;
}
.creat-category{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.footed-left{
  float: left;

}
.footed-right{
  float: right;
  width: 200rpx;
  text-align: center;
  background-color: #ff3649;
  color: #fff;
}


.currentList{
  margin: 20rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #3e3a39;
  border-radius: 20rpx;
}
.tab-name{
  width: 33.33333333%;
  float: left;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx
}
.list-content{
  border-top: 1rpx solid #C9C9C9;
  padding: 20rpx 0 20rpx 0;
}
.mainImg{
  float: left;
  width: 236rpx;
  height: 120rpx;
}
.select{
  height: 120rpx;
  padding: 0 0 0 20rpx;
  float: left;
}
.select image{
  width: 40rpx;
  height: 40rpx;
}
.main-url{
  display: block;
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius: 15rpx;
}
.mainName{
  float: left;
  width: 236rpx;
  text-indent: 60rpx;
}
.mainOper{
  float: left;
  width: 236rpx;
  text-align: center;
}
.edit{
  display: inline-block;
  width: 130rpx;
  line-height: 50rpx;
  text-align: center;
  color: #FF3649;
  border: 1rpx solid #FF3649;
  border-radius: 25rpx;
}
.recovery{
  display: inline-block;
  width: 130rpx;
  line-height: 50rpx;
  text-align: center;
  color: #C9C9C9;
  border: 1rpx solid #C9C9C9;
  border-radius: 25rpx;
  margin-top: 20rpx;
}
.create{
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 30rpx;
}
.errorTips{
  margin: 20rpx;
  font-size: 24rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #3e3a39;
  background-color: #FBF7CC;
  padding: 0 20rpx;
}
.item-title{
  margin: 0 20rpx;
  font-size: 24rpx;
  color: #ff3649;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #C9C9C9;
}
.label-text{
  text-align: left;
  font-size: 26rpx;
  line-height: 66rpx;
  color:  #3e3e39;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.temp-input{
  height: 70rpx;
  padding-left: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #c9caca;
  font-size: 26rpx;
  color: #9fa0a0;
  margin: 0 20rpx;
}
.must{
  font-size: 26rpx;
  color: #ff3649;
}





.page-body-info {
  display: flex;
  flex-direction: flow;
  align-items: center;
  background-color: #fff;
  width: 100%;
}
.page-section{
  width: 100%;
}
.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  border-radius: 15rpx;
  position: relative;
  margin:0 0 20rpx 20rpx;
}
.image-plus-nb{
  border: 0;
}
.image-plus-text{
  color: #888888;
  font-size: 28rpx;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.four-img{
  position: relative; width:150rpx;height:150rpx;margin:0 0 20rpx 20rpx;
}
.image {
  width: 150rpx;
  height: 150rpx;
  display: block;
  border-radius: 15rpx;
}
.close{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  top: -18rpx;
  right:  -18rpx;
}
.icon-box{
  position: absolute;
  width: 150rpx;
  height: 20rpx;
  padding: 10rpx 0;
  background-color: rgba(0, 0, 0, 0.3);
  bottom: 0;
  border-radius: 0 0 15rpx 15rpx;
}
.icon-box .icon-left{
  float: left;
  width: 50%;
  box-sizing: border-box;
  border-right: 1rpx solid #fff;
}
.icon-box .icon-right{
  float: left;
  width: 50%;
}
.left-img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  margin-left: 25rpx; 
}
.right-img{
  width: 20rpx;
  height: 20rpx;
  display: block;
  margin-left:30rpx; 
  
}
.left{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
}
.right{
  width: 32rpx;
  height: 32rpx;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
}