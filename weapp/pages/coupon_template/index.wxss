/* pages/coupon_template/index.wxss */
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  height: 100%;
  background-color: #f6f6f6;  
  position: relative;
}  
.header{
  margin:20rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #3e3a39;
  border-radius: 15rpx;
}
.header .tab{
   width: 33.33333333%;
  float: left;
  font-size: 26rpx;
  font-weight: 700;
  text-align: center;
}
.tab-text{
  margin: 0 58rpx;
  padding: 26rpx 0;
}
.tab-current{
  color: #FF3649;
  border-bottom: 4rpx solid #FF3649;
}
.footed{
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  font-size: 25rpx;
  color: #666464;
}
.footed-tab{
  width: 25%;
  float: left;
  text-align: center;
}
.footed-image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}



.category-none{
  text-align: center;
  font-size: 30rpx;
  color: #A3A3A3;
}
.kong-img{
  width: 250rpx;
  height: 200rpx;
  margin: 230rpx 0 80rpx 0;
}
.creat-category{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.footed-left{
  float: left;
  padding: 0 20rpx;
}
.footed-left text{
  display: inline-block;
  line-height: 80rpx;
}
.caozuo{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  padding: 0 20rpx;
}
.footed-right{
  float: right;
  width: 200rpx;
  text-align: center;
  background-color: #ff3649;
  color: #fff;
}
.my-check{
  width: 40rpx;
  height: 40rpx;
  padding-top: 20rpx;
  vertical-align: top;
}
.esc{
  display: block;
  padding: 0 30rpx;
  float: left;
}


.coupon-content{
  margin: 20rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  font-size: 26rpx;
}
.coupon-info{
  padding: 10rpx 0;
  color: #3e3a39;
}
.oper-coupon{
  border-top: 1rpx solid #e1e1e1;
}
.edit{
  display: inline-block;
  width: 130rpx;
  line-height: 50rpx;
  text-align: center;
  color: #FF3649;
  border: 1rpx solid #FF3649;
  border-radius: 25rpx;
}
.recovery{
  display: inline-block;
  width: 130rpx;
  line-height: 50rpx;
  text-align: center;
  color: #C9C9C9;
  border: 1rpx solid #C9C9C9;
  border-radius: 25rpx;
  margin: 20rpx 0 20rpx 20rpx;
}
.circle{
  float:left;
  padding:20rpx 20rpx 20rpx 0;
}
.oper-btn{
  float: right;
}
.cou-text{
  padding: 0 40rpx 0 10rpx;
}



.create{
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 30rpx;
}
.errorTips{
  margin: 20rpx;
  font-size: 24rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #3e3a39;
  background-color: #FBF7CC;
  padding: 0 20rpx;
}
.item-title{
  margin: 0 20rpx;
  font-size: 24rpx;
  color: #ff3649;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #C9C9C9;
}
.label-text{
  text-align: left;
  font-size: 26rpx;
  line-height: 66rpx;
  color:  #3e3e39;
  padding: 20rpx 0;
  margin: 0 20rpx;
}
.temp-input{
  height: 70rpx;
  padding-left: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #c9caca;
  font-size: 26rpx;
  color: #9fa0a0;
  margin: 0 20rpx;
}
.must{
  font-size: 26rpx;
  color: #ff3649;
}
.voucher-tips{
  margin: 50rpx 20rpx 0 20rpx;
  color: #9fa0a0;
  font-size: 22rpx;
  padding: 10rpx;
  background-color: #f6f6f6;
  border-radius: 12rpx;
}
.note-text{
  font-size: 22rpx;
  color: #9fa0a0;
  margin: 20rpx 20rpx 0 20rpx;
}

.pick_datetime {
    position: fixed;
    left: 0;
    bottom: 0;
    width:100%;
    overflow:hidden;
    background-color: #ccc; 
    z-index: 10 !important;
}
.pick_datetime_tool {
    display:flex;
    justify-content:space-between;
    height:92rpx;
    line-height:92rpx;
    border-top:4rpx solid #eee;
    border-bottom:4rpx solid #eee;
    padding:0 20rpx;
}
.pick_datetime_ok {font-weight:bold;}
.pick_datetime_clear {color:#666;}
.pick_datetime picker-view {
    font-size:34rpx;
}
.pick_datetime_column {
    height:40px;
    line-height:40px;
    text-align:center;
}
