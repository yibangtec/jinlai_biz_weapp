/* login.wxss */
.forgetPw{
  float: right;
  font-size: 30rpx;
  color: #7d7d7d;
  padding: 50rpx 30rpx 59rpx 30rpx;
}
.section__title{
  position: absolute;
  left: 50%;
  margin-left: -200rpx;
  top:50%;
  width: 400rpx;
  height: 200rpx;
  
  border: 2rpx solid #ccc;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
}
.loginTab{
  width: 100%;
  height: 190rpx;
}
.tabText {
  float: left;
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  margin-top: 80rpx
}
.loginTab .textLeft{
  box-sizing: border-box;
  border-right: 2rpx solid #e6e6e6;
}
.current{
  color: #ff3649;
  padding: 20rpx 20rpx;
  border-bottom: 4rpx solid #ff3649;
}
.input-box{
  width: 100%;
}
.input-item {
  display: flex;
  height: 116rpx;
  border-bottom: 2rpx solid #c9caca;
  margin: 0 30rpx;
}
.input-item text{
  font-size: 30rpx;
  color: #666464;
  padding-left: 20rpx;
  margin-top:55rpx;
  
}
.input-item input{
  flex: 1;
  height: 30rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  margin-top:48rpx;
  border: none;
}
.agreement{
  margin: 0 30rpx;
  padding: 50rpx 0;
  font-size: 20rpx;
  color: #7d7d7d;
  text-align: center;
}
.submitBtn{
  margin: 0 30rpx;
  color: #ffffff;
  background-color: #ff3649;
}
.textlight{
  color: #ff3649;
}
.verCode{
  width: 300rpx;
}