/* pages/freight/index.wxss */
.outer {zoom:1;}    /*==for IE6/7 Maxthon2==*/
.outer::after {clear:both;content:'.';display:block;width: 0;height: 0;visibility:hidden;} 
page {  
  display: block; 
  width: 100%; 
  background-color: #f6f6f6;  
  position: relative;
}  
.temp-box{
  margin: 20rpx 20rpx;
  background-color: #fff; 
  border-radius: 12rpx;
}
.tab{
  width: 33.33333333%;
  float: left;
  font-size: 26rpx;
  font-weight: 700;
  text-align: center;
  color: #3E3A39;
}
.tab-text{
  margin: 0 58rpx;
  padding: 26rpx 0;
}
.tab-current{
  color: #FF3649;
  border-bottom: 4rpx solid #FF3649;
}
.content{
  text-align: center
}
.content-img{
  width: 220rpx;
  height: 180rpx;
  margin: 250rpx 0 50rpx 0;
}
.content-text{
  font-size: 30rpx;
  color: #9fa0a0;
}
.freight-bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #FE3749;
}